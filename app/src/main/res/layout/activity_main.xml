<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_margin="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_photo_camera_black_24dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Instagram"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_margin="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_near_me_black_24dp"/>



    </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stories"
            android:textColor="@color/black"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/story1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/imgcc"
                app:civ_border_color="@color/black"
                app:civ_border_width="3dp"
                android:onClick="startstory"
                />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/story2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/imga"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="3dp"
                android:onClick="startstory"/>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/story3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/imgaa"
                app:civ_border_color="@color/black"
                app:civ_border_width="3dp"
                android:onClick="startstory"/>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/story4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/imgb"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="3dp"
                android:onClick="startstory"/>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/story5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/imgbb"
                app:civ_border_color="@color/black"
                app:civ_border_width="3dp"
                android:onClick="startstory"/>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/story6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/imgc"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="3dp"
                android:onClick="startstory"/>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/story7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/imgcc"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="3dp"
                android:onClick="startstory"/>



        </LinearLayout>
    </HorizontalScrollView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

    </android.support.v7.widget.RecyclerView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/ic_home_black_24dp" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/ic_search_black_24dp" />

        <ImageView
            android:id="@+id/postbtn"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:onClick="post"
            android:src="@drawable/ic_control_point_black_24dp" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/ic_favorite_black_24dp" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/ic_person_black_24dp" />

    </LinearLayout>

</LinearLayout>